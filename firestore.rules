rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isStudent() {
      return getUserRole() == 'student';
    }

    function isTeacher() {
      let role = getUserRole();
      return role == 'teacher' || role == 'admin' || role == 'superadmin';
    }

    function isAdmin() {
      let role = getUserRole();
      return role == 'admin' || role == 'superadmin';
    }

    // Rules for 'users' collection
    match /users/{userId} {
      // Admins/Superadmins can read any user profile
      // Users can read their own profile
      allow read: if isOwner(userId) || isAdmin();
      // Users can create their own profile upon signup
      allow create: if request.auth != null;
      // Users can update their own profile data
      // Admins/Superadmins can update any user's role
      allow update: if isOwner(userId) || isAdmin();
    }

    // Rules for 'classes' collection
    match /classes/{classId} {
      // Teachers can read classes they own
      // Students can read the class they belong to
      allow read: if isOwner(resource.data.teacherId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.classId == classId;
      // Teachers can create classes
      allow create: if isTeacher();
      // Only the teacher who owns the class can update or delete it
      allow write: if isOwner(resource.data.teacherId);
    }

    // Rules for 'assignments' collection
    match /assignments/{assignmentId} {
        // Teachers can read assignments they created
        // Students can read assignments assigned to their class
        allow read: if isTeacher() && isOwner(resource.data.teacherId) ||
                    (isStudent() &&
                      let studentClassId = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.classId;
                      let studentClassName = get(/databases/$(database)/documents/classes/$(studentClassId)).data.className;
                      let classRepresentation = {'classId': studentClassId, 'className': studentClassName};
                      classRepresentation in resource.data.assignedClasses
                    );
        // Teachers can create, update, and delete assignments
        allow write: if isTeacher();
    }
    
    // Rules for 'feedback' collection
    match /feedback/{feedbackId} {
        // Teachers can manage feedback they have sent
        allow read, delete: if isTeacher() && isOwner(resource.data.teacherId);
        // Students can read feedback sent to them
        allow read, update: if isStudent() && isOwner(resource.data.studentId);
        // Teachers can create feedback
        allow create: if isTeacher();
        // Allow teachers to list feedback they have sent
        allow list: if isTeacher();
    }
  }
}

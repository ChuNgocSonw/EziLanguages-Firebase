rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && getUserData().role == 'student';
    }

    function isTeacher() {
      return isSignedIn() && (getUserData().role == 'teacher' || isAdmin());
    }

    function isAdmin() {
      return isSignedIn() && (getUserData().role == 'admin' || getUserData().role == 'superadmin');
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Default deny all, unless specifically allowed by isAdmin
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == userId;
    }

    match /classes/{classId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
    }

    match /assignments/{assignmentId} {
      allow read: if isTeacher() || 
                   (isStudent() && 
                    {
                      'classId': getUserData().classId, 
                      'className': get(/databases/$(database)/documents/classes/$(getUserData().classId)).data.className
                    } in resource.data.assignedClasses);
      allow create, update, delete: if isTeacher();
    }
    
    match /feedback/{docId} {
        allow create, delete: if isTeacher();

        allow read: if (isTeacher() && resource.data.teacherId == request.auth.uid) || 
                       (isStudent() && resource.data.studentId == request.auth.uid);
        
        allow update: if isStudent() && 
                         resource.data.studentId == request.auth.uid &&
                         request.resource.data.isRead == true &&
                         resource.data.isRead == false &&
                         request.resource.data.title == resource.data.title &&
                         request.resource.data.content == resource.data.content &&
                         request.resource.data.teacherId == resource.data.teacherId;
    }
    
     match /feedback/{docId=**} {
      // Allow teachers to list the feedback they have sent
      allow list: if isTeacher();
    }
  }
}

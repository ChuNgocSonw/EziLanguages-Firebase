
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =============================================================
    //   /users/{userId}
    // =============================================================
    match /users/{userId} {
      // READ:
      // - Any authenticated user can read user profiles.
      allow read: if request.auth != null;

      // WRITE:
      // - A user can update their own profile.
      // - An admin/superadmin can update any user's profile.
      allow write: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin']
      );

      // =============================================================
      //   Subcollection: quizHistory and assignmentAttempts
      // =============================================================
      match /{subcollection:(quizHistory|assignmentAttempts)}/{docId} {
        // READ:
        // - A user can read their own history.
        // - A teacher/admin can read any user's history.
        allow read: if request.auth != null && (
          request.auth.uid == userId ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin', 'superadmin']
        );

        // CREATE: A user can only create documents in their own history.
        allow create: if request.auth != null && request.auth.uid == userId;
        
        // UPDATE, DELETE: No one can update or delete history.
        allow update, delete: if false;
      }
      
      // =============================================================
      //   Subcollection: chats
      // =============================================================
      match /chats/{chatId} {
        // PERMISSIONS: Allow users to manage their own chat sessions.
        allow read, create, delete: if request.auth != null && request.auth.uid == userId;

        // =============================================================
        //   Sub-subcollection: messages
        // =============================================================
        match /messages/{messageId} {
          // PERMISSIONS: Allow users to read and create messages in their own chats.
          allow read, create: if request.auth != null && request.auth.uid == userId;
        }
      }
    }

    // =============================================================
    //   /classes/{classId}
    // =============================================================
    match /classes/{classId} {
      // READ: Authenticated users can read class lists.
      allow read: if request.auth != null;
      
      // CREATE: Only teachers/admins can create classes.
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin', 'superadmin'];
      
      // UPDATE, DELETE: Only the teacher who owns the class can modify it.
      allow update, delete: if request.auth != null && resource.data.teacherId == request.auth.uid;
    }
    
    // =============================================================
    //   /assignments/{assignmentId}
    // =============================================================
    match /assignments/{assignmentId} {
       // READ: Authenticated users can read assignments.
      allow read: if request.auth != null;
      
      // CREATE: Only teachers/admins can create assignments.
      allow create: if request.auth != null && request.resource.data.teacherId == request.auth.uid;
      
      // UPDATE, DELETE: Only the teacher who owns the assignment can modify it.
      allow update, delete: if request.auth != null && resource.data.teacherId == request.auth.uid;
    }

    // =============================================================
    //   /feedback/{feedbackId}
    // =============================================================
    match /feedback/{feedbackId} {
      // READ:
      // - The teacher who sent it can read it.
      // - The student who received it can read it.
      allow read: if request.auth != null && (
        resource.data.teacherId == request.auth.uid ||
        resource.data.studentId == request.auth.uid
      );
      
      // CREATE: Only teachers/admins can create feedback.
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin', 'superadmin'];
      
      // UPDATE: The student can update to mark as read.
      allow update: if request.auth != null && resource.data.studentId == request.auth.uid;
      
      // DELETE: The teacher who sent it can delete it.
      allow delete: if request.auth != null && resource.data.teacherId == request.auth.uid;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function getRequestingUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isTeacherOfStudent(studentId) {
      let studentData = get(/databases/$(database)/documents/users/$(studentId)).data;
      let classExists = exists(/databases/$(database)/documents/classes/$(studentData.classId));
      
      return classExists && get(/databases/$(database)/documents/classes/$(studentData.classId)).data.teacherId == request.auth.uid;
    }
    
    function isStudentInAssignedClass(assignment) {
      let studentClassId = getRequestingUserData().classId;
      // Check if any map in the assignedClasses list has a classId that matches the student's classId.
      return assignment.assignedClasses.filter(c => c.classId == studentClassId).size() > 0;
    }
    
    match /users/{userId} {
      allow list: if request.auth != null;
      allow read, write: if request.auth.uid == userId;
      allow read: if getRequestingUserData().role in ['admin', 'superadmin'];
      allow read: if getRequestingUserData().role == 'teacher' && isTeacherOfStudent(userId);
    }
    
    match /users/{userId}/chats/{chatId} {
        allow read, write, delete: if request.auth.uid == userId;
    }
    
     match /users/{userId}/chats/{chatId}/messages/{messageId} {
        allow read, write, delete: if request.auth.uid == userId;
    }
    
    match /users/{userId}/quizHistory/{attemptId} {
        allow read, write: if request.auth.uid == userId;
    }

    match /users/{userId}/assignmentAttempts/{attemptId} {
        allow read, write: if request.auth.uid == userId;
        allow read: if getRequestingUserData().role == 'teacher' && isTeacherOfStudent(userId);
    }
    
    match /classes/{classId} {
        allow read, write: if get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid;
        allow create: if getRequestingUserData().role in ['teacher', 'admin', 'superadmin'];
    }

    match /assignments/{assignmentId} {
      allow read, write, delete: if resource.data.teacherId == request.auth.uid;
      allow create: if getRequestingUserData().role in ['teacher', 'admin', 'superadmin'];
      // Students can read assignments assigned to their class
      allow read: if isStudentInAssignedClass(resource.data);
    }
    
    match /feedback/{document=**} {
      // Teachers can list the feedback they sent
      allow list: if getRequestingUserData().role == 'teacher';
    }

    match /feedback/{feedbackId} {
      // Student can read/update their own feedback
      allow read, update: if resource.data.studentId == request.auth.uid;
      // Teacher can create, read, and delete their own feedback
      allow create, read, delete: if request.auth.uid == resource.data.teacherId;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    match /classes/{classId} {
      allow read, write, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin', 'superadmin'];
    }
    
    match /assignments/{assignmentId} {
      allow read, write, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin', 'superadmin'];
    }

    match /lessons/{lessonId} {
      allow list, get: if request.auth != null;
      allow write, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }

    match /feedback/{feedbackId} {
      allow read, write: if request.auth != null;
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['teacher', 'admin', 'superadmin'];
    }

    match /{path=**}/chats/{chatId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == path[1];
    }
    
    match /{path=**}/messages/{messageId} {
      allow read, write, delete: if request.auth != null && path[1] == request.auth.uid;
    }

    match /{path=**}/quizHistory/{quizId} {
      allow read, write: if request.auth != null && path[1] == request.auth.uid;
    }
    
    match /{path=**}/assignmentAttempts/{attemptId} {
       allow read, write: if request.auth != null && path[1] == request.auth.uid;
    }
  }
}
